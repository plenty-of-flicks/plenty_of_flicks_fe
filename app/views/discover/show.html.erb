<div class="discover-marquee">
  <%= image_tag('pof_discover_link.png', height: 150) %>
</div>

<div class="movie-display">
  <div class="movie-title">
    <h1 id='movie-title'><%= @movie.title %> (<%= @movie.year %>)</h1>
  </div>

  <div class="movie-info">
    <div class="movie-poster">
      <% if @movie.poster_path %>
        <%= image_tag("https://image.tmdb.org/t/p/w300/" + @movie.poster_path) %>
      <% end %>
    </div>

    <div class="movie-details">
      <div class="movie-genres">
        <% if @movie.genres %>
          <h3 id='movie-header'>
            Genres:
          </h3>
          <h4>
            <% @movie.genres.each do |genre| %>
              <%= genre %><%= ', ' unless genre == @movie.genres.last %>
            <% end %>
          </h4>
        <% end %>
      </div>


      <div class="movie-rating">
        <h3 id='movie-header'>Rating:</h3>
        <h4>
          <% if @movie.vote_average %>
            <%= @movie.vote_average %>/10
          <% else %>
            --/10
          <% end %><br>
          <% if @movie.vote_count %>
            <%= @movie.vote_count %>
          <% else %>
            0
          <% end %>
          Total Votes
        </h4>
      </div>
      <div class="movie-description">
        <h3 id='movie-header'>Description:</h3>
        <h4><%= @movie.description %></h4>
      </div>
    </div>
  </div>
</div>

<div class="swipe-links">
  <div class="swipe-left-link">
    <%= link_to image_tag('no_icon.png', size:200, class: 'swipe-link'), swipe_path(@filter.merge(movie_id: @movie.id, rating: 0)) %>
  </div>

  <div class="swipe-prompt">
    <h2>Want to<br>Watch it?</h2>
  </div>

  <div class="swipe-right-link">
    <%= link_to image_tag('yes_icon.png', size:200, class: 'swipe-link'), swipe_path(@filter.merge(movie_id: @movie.id, rating: 1)) %>
  </div>
</div>
