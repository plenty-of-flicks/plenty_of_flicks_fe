<div class="groups-marquee">
  <%= image_tag('pof_groups_link.png', height: 150) %>
</div>

<div class="groups-section">
  <h1>Create a Group</h1>
  <h4>
    Enter a name for the group and the friends you'd like to add.
  </h4>
  <div class="groups-creation">
    <%= form_with(url: groups_path, method: :post) do |f| %>
      <div class="group-friends">
        <h4>
          <%= f.label('Name:') %>
          <%= f.text_field :name %>
        </h4>
        <% @friends.each_slice(4) do |friend_slice| %>
          <div class="group-slice">
            <% friend_slice.each do |friend| %>
              <div class="group-check-box">
                <h4>
                  <%= f.label("friend_#{friend.id}", "#{friend.first_name} #{friend.last_name}") %>
                  <%= f.check_box friend.id.to_s.to_sym %>
                </h4>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= submit_tag("Create Group") %>
    <% end %>
  </div>
</div>
