<div class="groups-marquee">
  <%= image_tag('pof_groups_link.png', height: 150) %>
</div>

<div class="groups-section">
  <h2><%= @group.name %></h2>
  <h3>Members:</h3>
  <% @group.users.each do |user| %>
    <h4><%= "#{user.first_name} #{user.last_name}" %></h4>
    <p><%= user.email %></p>
    <%= image_tag user.image, height: 80 %>
  <% end %>
</div>
