<h1>Edit Profile</h1>

<%= form_with(url: profile_update_path, method: :patch) do |f| %>
  <p><%= f.label('First Name') %></p>
  <p><%= f.text_field :first_name %></p>
  <p><%= f.label('Last Name') %></p>
  <p><%= f.text_field :last_name %></p>
  <p><%= f.label('Email') %></p>
  <p><%= f.text_field :email %></p>
  <p><%= f.label('User Image') %></p>
  <p><%= f.text_field :image %></p>

  <%= submit_tag("Update Profile") %>
<% end %>
