<!DOCTYPE html>
<html>
  <head>
    <title>PlentyOfFlicksFe</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class = "topnav">
      <div class="home-link">
        <%= link_to image_tag('home.png', size:100), root_path %>
      </div>
      <% if current_user %>
        <div class="profile-link">
          <%= link_to 'Profile', profile_path %>
        </div>
        <div class="discover-link">
          <%= link_to 'Find Movies', discover_index_path %>
        </div>
        <div class="log-out">
          <%= link_to 'Log Out', google_logout_path %>
        </div>
      <% else %>
      <div class="log-in">
        <%= link_to 'Log In', google_login_path %>
      </div>
      <% end %>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p1><%= msg %></p1>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
